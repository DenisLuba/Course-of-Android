<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/top_start"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/top_start_square" />

    <!--
    android:background="color" - цвет фона
    color = # 11223344,
     11 прозрачность
     22 - красный
     33 - зеленый
     44 - синий

     android:alpha="0.3" - прозрачность View (фона и текста)
     -->

    <View
        android:layout_width="@dimen/squareSize"
        android:layout_height="@dimen/squareSize"
        android:background="#AA0000FF"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"
        android:layout_gravity="center" />

    <View
        android:layout_width="@dimen/squareSize"
        android:layout_height="@dimen/squareSize"
        android:background="#00FF00"
        android:alpha="0.5"
        android:layout_gravity="center" />

    <View
        android:layout_width="@dimen/squareSize"
        android:layout_height="@dimen/squareSize"
        android:background="#88FF0000"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/bottom_end"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/bottom_end_square" />

</FrameLayout>